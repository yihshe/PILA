{
    "name": "AE_DPM_A",
    "n_gpu": 1,
    "arch": {
        "type": "VanillaAE",
        "args": {
            "input_dim": 23,
            "hidden_dim": 21
        }
    },
    "data_loader": {
        "type": "EVIDataLoader",
        "type_test": "EVIDataLoader",
        "args": {
            "data_dir": "data/processed/dpm/train.csv",
            "batch_size": 60,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2
        },
        "data_dir_valid": "data/processed/dpm/valid.csv",
        "data_dir_test": "data/processed/dpm/test.csv"
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 1e-4,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "loss_test": "mse_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/dpm",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "input_key": "evi",
        "output_key": "evi",
        "stablize_grad": false,
        "tensorboard": false,
        "wandb": false
    }
}