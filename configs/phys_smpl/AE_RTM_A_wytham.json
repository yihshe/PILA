{
    "name": "PHYS_VAE_RTM_A_WYTHAM_SMPL",
    "n_gpu": 1,
    "arch": {
        "type": "PHYS_VAE_SMPL",
        "args": {
            "physics": "RTM",
            "input_dim": 11,
            "hidden_dim": 7,
            "rtm_paras": "configs/rtm_paras.json",
            "standardization": {
                "x_mean": "data/processed/rtm/wytham/insitu_period/train_x_mean.npy",
                "x_scale": "data/processed/rtm/wytham/insitu_period/train_x_scale.npy"
            }
        },
        "phys_vae": {
            "no_phy": true,
            "dim_z_aux": 9,
            "dim_z_phy": 0,
            "activation": "elu",
            "num_units_feat": 128,
            "hidlayers_feat": [
                128
            ],
            "hidlayers_z_aux": [
                128
            ],
            "hidlayers_z_phy": [
                128
            ],
            "residual_rank": 2,
            "tau_init": 3.0,
            "tau_final": 1.0,
            "tau_warmup_epochs": 20,
            "r_init": 0.0,
            "r_final": 1.0,
            "r_warmup_epochs": 30,
            "ortho_penalty_weight": 0.1,
            "coeff_penalty_weight": 0.0,
            "delta_penalty_weight": 0.0,
            "detach_x_P_for_bias": true
        }
    },
    "data_loader": {
        "type": "SpectrumS2DataLoader",
        "args": {
            "data_dir": "data/processed/rtm/wytham/insitu_period/train.csv",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 4,
            "with_const": false
        },
        "data_dir_valid": "data/processed/rtm/wytham/insitu_period/valid.csv",
        "data_dir_test": "data/processed/rtm/wytham/insitu_period/test.csv"
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0003,
            "weight_decay": 0.0001,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 150
        }
    },
    "trainer": {
        "epochs": 150,
        "save_dir": "saved/rtm",
        "save_period": 10,
        "log_step": 5,
        "verbosity": 2,
        "monitor": "min val_rec_loss",
        "early_stop": 100,
        "input_key": "spectrum",
        "output_key": "spectrum",
        "stablize_grad": true,
        "grad_clip_norm": 1.0,
        "tensorboard": false,
        "wandb": true,
        "phys_vae": {
            "epochs_pretrain": 0,
            "kl_warmup_epochs": 50,
            "balance_gate": 0.001,
            "balance_data_aug": 1.0,
            "balance_residual": 0.001,
            "use_kl_term": false,
            "beta_max": 1.0,
            "use_capacity_control": false,
            "C_max": 7.0,
            "C_gamma": 10.0,
            "beta_aux": 1.0,
            "edge_penalty_weight": 0.0,
            "edge_penalty_power": 1.0,
            "use_ema_prior": false,
            "ema_momentum": 0.999
        }
    }
}